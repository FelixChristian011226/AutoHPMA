<Application
    x:Class="AutoHPMA.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:converters="clr-namespace:AutoHPMA.Converters"
    xmlns:helperConverters="clr-namespace:AutoHPMA.Helpers.Converters"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <converters:KeyToStringConverter x:Key="KeyToStringConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:MouseActionTypeToColorConverter x:Key="MouseActionTypeToColorConverter" />
            <converters:MouseActionTypeToBackgroundConverter x:Key="MouseActionTypeToBackgroundConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
            <converters:HexToColorConverter x:Key="HexToColorConverter" />
            <converters:ActionTypeToDragVisibilityConverter x:Key="ActionTypeToDragVisibilityConverter" />
            <converters:ActionTypeToDurationVisibilityConverter x:Key="ActionTypeToDurationVisibilityConverter" />
            <converters:ActionTypeToTimesVisibilityConverter x:Key="ActionTypeToTimesVisibilityConverter" />
            <helperConverters:TaskTypeToIsRunningConverter x:Key="TaskTypeToIsRunningConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
