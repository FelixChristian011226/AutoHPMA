<Page x:Class="AutoHPMA.Views.Pages.TaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoHPMA.Views.Pages"
      xmlns:pages="clr-namespace:AutoHPMA.ViewModels.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:controls="clr-namespace:AutoHPMA.Views.Controls"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DataContext="{d:DesignInstance Type=pages:TaskViewModel}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      mc:Ignorable="d" 
      Title="TaskPage">

    <StackPanel Margin="40,30,40,30">
        <ui:TextBlock
            Margin="0,0,0,8"
            FontWeight="Bold"
            Text="常驻功能" />
            
        <!--  自动社团答题  -->
        <ui:CardExpander Margin="0,0,0,12" ContentPadding="0" Icon="{ui:SymbolIcon QuizNew24}">
            <ui:CardExpander.Header>
                <controls:TaskCardHeader 
                    Title="自动社团答题"
                    ToggleCommand="{Binding ViewModel.AutoClubQuizToggleCommand}"
                    IsRunning="{Binding ViewModel.CurrentTaskType, Converter={StaticResource TaskTypeToIsRunningConverter}, ConverterParameter=AutoClubQuiz}" />
            </ui:CardExpander.Header>
            <StackPanel>
                <Separator Margin="-18,0" BorderThickness="0,1,0,0" />
                <controls:SettingRow Title="答题延迟（秒）" Description="匹配答案后的点击延时，默认为0">
                    <controls:SettingRow.SettingContent>
                        <ui:NumberBox MinWidth="100" Value="{Binding ViewModel.AnswerDelay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:SettingRow.SettingContent>
                </controls:SettingRow>
                <Separator Margin="-18,0" BorderThickness="0,1,0,0" />
                <controls:SettingRow Title="加入学院互助" Description="当本社团未开启社团答题时，加入学院互助频道的答题活动">
                    <controls:SettingRow.SettingContent>
                        <ui:ToggleSwitch 
                            OnContent="On" OffContent="Off"
                            IsChecked="{Binding ViewModel.JoinOthers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </controls:SettingRow.SettingContent>
                </controls:SettingRow>
                <Separator Margin="-18,0" BorderThickness="0,1,0,0" />
                <controls:SettingRow Title="打开题库" Description="点击打开题库所在文件夹">
                    <controls:SettingRow.SettingContent>
                        <ui:Button Command="{Binding ViewModel.OpenQuestionBankCommand}" Content="打开" Icon="{ui:SymbolIcon FolderOpen24}" />
                    </controls:SettingRow.SettingContent>
                </controls:SettingRow>
            </StackPanel>
        </ui:CardExpander>
        
        <!--  自动禁林  -->
        <ui:CardExpander Margin="0,0,0,12" ContentPadding="0" Icon="{ui:SymbolIcon TreeDeciduous20}">
            <ui:CardExpander.Header>
                <controls:TaskCardHeader 
                    Title="自动禁林探索"
                    ToggleCommand="{Binding ViewModel.AutoForbiddenForestToggleCommand}"
                    IsRunning="{Binding ViewModel.CurrentTaskType, Converter={StaticResource TaskTypeToIsRunningConverter}, ConverterParameter=AutoForbiddenForest}" />
            </ui:CardExpander.Header>
            <StackPanel>
                <Separator Margin="-18,0" BorderThickness="0,1,0,0" />
                <controls:SettingRow Title="禁林次数" Description="在执行目标次数后终止">
                    <controls:SettingRow.SettingContent>
                        <ui:NumberBox MinWidth="90" Value="{Binding ViewModel.AutoForbiddenForestTimes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:SettingRow.SettingContent>
                </controls:SettingRow>
                <Separator Margin="-18,0" BorderThickness="0,1,0,0" />
                <controls:SettingRow Title="组队身份" Description="选择自己身份：队长或者队员">
                    <controls:SettingRow.SettingContent>
                        <ComboBox MinWidth="80" ItemsSource="{Binding ViewModel.TeamPositions}" SelectedItem="{Binding ViewModel.SelectedTeamPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:SettingRow.SettingContent>
                </controls:SettingRow>
            </StackPanel>
        </ui:CardExpander>
        
        <!--  自动烹饪  -->
        <ui:CardExpander Margin="0,0,0,12" ContentPadding="0" Icon="{ui:SymbolIcon Food24}">
            <ui:CardExpander.Header>
                <controls:TaskCardHeader 
                    Title="自动巫师烹饪"
                    ToggleCommand="{Binding ViewModel.AutoCookingToggleCommand}"
                    IsRunning="{Binding ViewModel.CurrentTaskType, Converter={StaticResource TaskTypeToIsRunningConverter}, ConverterParameter=AutoCooking}" />
            </ui:CardExpander.Header>
            <StackPanel>
                <Separator Margin="-18,0" BorderThickness="0,1,0,0" />
                <controls:SettingRow Title="烹饪次数" Description="在执行目标次数后终止">
                    <controls:SettingRow.SettingContent>
                        <ui:NumberBox MinWidth="90" Value="{Binding ViewModel.AutoCookingTimes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:SettingRow.SettingContent>
                </controls:SettingRow>
                <controls:SettingRow Title="选择菜品" Description="选择要烹饪的菜品">
                    <controls:SettingRow.SettingContent>
                        <ComboBox MinWidth="120" ItemsSource="{Binding ViewModel.Dishes}" SelectedItem="{Binding ViewModel.AutoCookingSelectedDish, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:SettingRow.SettingContent>
                </controls:SettingRow>
                <controls:SettingRow Title="OCR引擎" Description="选择文字识别引擎">
                    <controls:SettingRow.SettingContent>
                        <ComboBox MinWidth="120" ItemsSource="{Binding ViewModel.OCRs}" SelectedItem="{Binding ViewModel.AutoCookingSelectedOCR, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:SettingRow.SettingContent>
                </controls:SettingRow>
            </StackPanel>
        </ui:CardExpander>

        <ui:TextBlock
            Margin="0,0,0,8"
            FontWeight="Bold"
            Text="限时活动" />
            
        <!--  甜蜜冒险  -->
        <ui:CardExpander Margin="0,0,0,12" ContentPadding="0" Icon="{ui:SymbolIcon Diversity24}">
            <ui:CardExpander.Header>
                <controls:TaskCardHeader 
                    Title="自动甜蜜冒险"
                    ToggleCommand="{Binding ViewModel.AutoSweetAdventureToggleCommand}"
                    IsRunning="{Binding ViewModel.CurrentTaskType, Converter={StaticResource TaskTypeToIsRunningConverter}, ConverterParameter=AutoSweetAdventure}" />
            </ui:CardExpander.Header>
            <StackPanel>
            </StackPanel>
        </ui:CardExpander>        
        
    </StackPanel>
</Page>
