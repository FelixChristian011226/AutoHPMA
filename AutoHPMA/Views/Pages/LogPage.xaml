<Page
    x:Class="AutoHPMA.Views.Pages.LogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutoHPMA.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:AutoHPMA.ViewModels.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:converters="clr-namespace:AutoHPMA.Converters"
    Title="LogPage"
    d:DataContext="{d:DesignInstance Type=pages:LogViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.VerticalScrollBarVisibility="Disabled"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:LogLevelToColorConverter x:Key="LogLevelToColorConverter" />
    </Page.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <ui:ToggleSwitch Content="详情"  IsChecked="{Binding ViewModel.ShowVerbose}" Margin="0,0,12,0"/>
            <ui:ToggleSwitch Content="信息" IsChecked="{Binding ViewModel.ShowInfo}" Margin="0,0,12,0"/>
            <ui:ToggleSwitch Content="调试" IsChecked="{Binding ViewModel.ShowDebug}" Margin="0,0,12,0"/>
            <ui:ToggleSwitch Content="警告" IsChecked="{Binding ViewModel.ShowWarning}" Margin="0,0,12,0"/>
            <ui:ToggleSwitch Content="错误" IsChecked="{Binding ViewModel.ShowError}" Margin="0,0,12,0"/>
            <ui:ToggleSwitch Content="严重" IsChecked="{Binding ViewModel.ShowFatal}" Margin="0,0,12,0" />
            <ui:Button Content="清除日志" Command="{Binding ViewModel.ClearLogsCommand}" Margin="12,0,0,0"/>
        </StackPanel>

        <!-- 使用统一背景色的容器 -->
        <Border Grid.Row="1" 
                CornerRadius="8" 
                Background="{DynamicResource ControlFillColorTertiaryBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                Padding="8">
            <!-- 使用 ListBox 实现虚拟化和正确的滚动约束 -->
            <ListBox x:Name="LogListBox"
                     ItemsSource="{Binding ViewModel.FilteredLogs}"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling">
                <ListBox.ItemContainerStyle>
                    <!-- 移除所有选中/悬停效果 -->
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Margin="0,2" 
                                   FontFamily="Consolas" 
                                   FontSize="13"
                                   TextWrapping="Wrap">
                            <Run Text="{Binding Timestamp, StringFormat='[{0:HH:mm:ss}] ', Mode=OneWay}" 
                                 Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                            <Run Text="{Binding LevelShort, StringFormat='[{0}] ', Mode=OneWay}" 
                                 FontWeight="SemiBold"
                                 Foreground="{Binding Level, Converter={StaticResource LogLevelToColorConverter}}"/>
                            <Run Text="{Binding Message, Mode=OneWay}" 
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</Page>
