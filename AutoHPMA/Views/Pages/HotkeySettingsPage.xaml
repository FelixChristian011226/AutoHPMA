<Page
    x:Class="AutoHPMA.Views.Pages.HotkeySettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutoHPMA.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="HotkeySettingsPage"
    d:DataContext="{d:DesignInstance local:HotkeySettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel Margin="40,30,40,30">
        <ui:TextBlock
            Margin="0,0,0,8"
            FontWeight="Bold"
            Text="热键设置" />
        <ui:CardExpander Margin="0,0,0,12"
                         ContentPadding="0"
                         Icon="{ui:SymbolIcon Keyboard24}">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Grid.Row="0"
                                  Grid.Column="0"
                                  FontTypography="Body"
                                  Text="功能热键"
                                  TextWrapping="Wrap" />
                    <ui:TextBlock Grid.Row="1"
                                  Grid.Column="0"
                                  Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                  Text="设置各项功能的热键绑定"
                                  TextWrapping="Wrap" />
                </Grid>
            </ui:CardExpander.Header>
            
            <ItemsControl ItemsSource="{Binding ViewModel.HotkeyBindings}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="16,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <ui:TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                <ui:TextBlock Text="{Binding Description}" 
                                             Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                             TextWrapping="Wrap" />
                            </StackPanel>
                            <ui:TextBox Grid.Column="1"
                                      Width="50"
                                      Text="{Binding Key, Converter={StaticResource KeyToStringConverter}}"
                                      IsReadOnly="True"
                                      PreviewKeyDown="HotkeyTextBox_PreviewKeyDown">
                                <ui:TextBox.Style>
                                    <Style TargetType="ui:TextBox" BasedOn="{StaticResource {x:Type ui:TextBox}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.ViewModel.IsWaitingForKey, 
                                                                          RelativeSource={RelativeSource AncestorType=Page}}" 
                                                         Value="True">
                                                <Setter Property="Text" Value="请按键..." />
                                                <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ui:TextBox.Style>
                            </ui:TextBox>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ui:CardExpander>
    </StackPanel>
</Page> 