<Page
    x:Class="AutoHPMA.Views.Pages.HotkeySettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutoHPMA.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="HotkeySettingsPage"
    d:DataContext="{d:DesignInstance local:HotkeySettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <CollectionViewSource x:Key="GroupedHotkeys" 
                            Source="{Binding ViewModel.HotkeyBindings}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Group"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Page.Resources>

    <StackPanel Margin="40,30,40,30">
        <!-- 标题区域 -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <ui:SymbolIcon Symbol="Keyboard24" FontSize="20" Margin="0,0,8,0"/>
            <ui:TextBlock
                FontTypography="BodyStrong"
                Text="热键设置" 
                VerticalAlignment="Center"/>
        </StackPanel>
        
        <ui:TextBlock
            Margin="0,0,0,16"
            Text="点击输入框后按下按键来设置热键，按ESC取消设置。支持组合键。"
            Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" 
            FontSize="12"/>
        
        <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="12">
            <ui:ListView ItemsSource="{Binding Source={StaticResource GroupedHotkeys}}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="0">
                <ui:ListView.ItemContainerStyle>
                    <Style TargetType="ui:ListViewItem" BasedOn="{StaticResource {x:Type ui:ListViewItem}}">
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Margin" Value="0,1"/>
                    </Style>
                </ui:ListView.ItemContainerStyle>
                <ui:ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border Margin="0,8,0,4" 
                                        Padding="6,3" 
                                        Background="{ui:ThemeResource ControlFillColorSecondaryBrush}" 
                                        CornerRadius="4">
                                    <ui:TextBlock Text="{Binding Name}" 
                                                  FontWeight="Medium" 
                                                  Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                                  FontSize="12"/>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ui:ListView.GroupStyle>
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- 左侧：描述 -->
                            <ui:TextBlock 
                                Grid.Column="0"
                                Text="{Binding Description}" 
                                TextWrapping="NoWrap"
                                TextTrimming="CharacterEllipsis"
                                VerticalAlignment="Center"
                                FontSize="13"/>

                            <!-- 右侧：热键输入框 -->
                            <ui:TextBox Grid.Column="1"
                                        Width="120"
                                        MinWidth="100"
                                        Height="32"
                                        Margin="12,0,0,0"
                                        Icon="{ui:SymbolIcon Keyboard20}"
                                        PlaceholderText="未设置"
                                        Text="{Binding ModKeyTuple, Converter={StaticResource KeyToStringConverter}, Mode=OneWay}"
                                        IsReadOnly="True"
                                        PreviewKeyDown="HotkeyTextBox_PreviewKeyDown"
                                        HorizontalAlignment="Right"
                                        TextAlignment="Center"
                                        FontSize="12"
                                        ClearButtonEnabled="False">
                                <ui:TextBox.Style>
                                    <Style TargetType="ui:TextBox" BasedOn="{StaticResource {x:Type ui:TextBox}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.ViewModel.IsWaitingForKey, 
                                                              RelativeSource={RelativeSource AncestorType=Page}}" 
                                                         Value="True">
                                                <Setter Property="Text" Value="按下按键..." />
                                                <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ui:TextBox.Style>
                            </ui:TextBox>
                        </Grid>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </Border>
    </StackPanel>
</Page> 