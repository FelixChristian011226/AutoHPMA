<Page
    x:Class="AutoHPMA.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutoHPMA.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:AutoHPMA.ViewModels.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:controls="clr-namespace:AutoHPMA.Views.Controls"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance Type=pages:DashboardViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel Margin="40,30,40,30">

        <Border Height="200" CornerRadius="8">
            <Grid>
                <Border ClipToBounds="True" CornerRadius="8">
                    <Border.Background>
                        <ImageBrush
                            ImageSource="pack://application:,,,/Assets/hpma.png"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Stretch="UniformToFill" />
                    </Border.Background>
                    <Border.OpacityMask>
                        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                            <GradientStop Color="Transparent" />
                            <GradientStop Offset="0.7" Color="White" />
                        </LinearGradientBrush>
                    </Border.OpacityMask>
                </Border>
                <Grid>
                    <StackPanel
                        Margin="52,0,0,26"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Background="Transparent">
                        <ui:TextBlock FontTypography="Title" Text="AutoHPMA" />
                        <ui:TextBlock
                            FontTypography="Subtitle"
                            Opacity="0.8"
                            Text="哈利波特 · 魔法觉醒" />
                        <ui:TextBlock FontTypography="BodyStrong" Opacity="0.6">
                            <Hyperlink
                                Command="{Binding ViewModel.GoToWikiUrlCommand}"
                                Foreground="#B7FFFFFF"
                                TextDecorations="None">
                                <Run>点击查看文档</Run>
                                <Run FontFamily="{StaticResource FluentSystemIcons}" FontWeight="Light">&#xEE7A;</Run>
                            </Hyperlink>

                        </ui:TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!--  启动！  -->
        <ui:CardExpander
            Margin="0,12,0,12"
            ContentPadding="0"
            Icon="{ui:SymbolIcon Play20}">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        FontTypography="Body"
                        Text="AutoHPMA，启动！"
                        TextWrapping="Wrap" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                        Text="点击启动按钮以开启自动化任务，可展开配置截图参数"
                        TextWrapping="Wrap" />
                    <ui:Button
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Margin="0,0,24,0"
                        Command="{Binding ViewModel.ToggleTriggerCommand}">
                        <ui:Button.Style>
                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                <Setter Property="Content" Value="启动"/>
                                <Setter Property="Icon" Value="{ui:SymbolIcon Play24}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ViewModel.IsRunning}" Value="True">
                                        <Setter Property="Content" Value="停止"/>
                                        <Setter Property="Icon" Value="{ui:SymbolIcon Dismiss24}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:Button.Style>
                    </ui:Button>
                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>
            </StackPanel>
        </ui:CardExpander>

        <!--  日志窗口  -->
        <ui:CardExpander
            Margin="0,0,0,12"
            ContentPadding="0"
            Icon="{ui:SymbolIcon WindowBulletList20}">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        FontTypography="Body"
                        Text="启用日志窗口"
                        TextWrapping="Wrap" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                        Text="在游戏窗口左上角显示悬浮日志，包含当前时间、运行状态和任务日志"
                        TextWrapping="Wrap" />
                    <ui:ToggleSwitch
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Margin="0,0,24,0"
                        IsChecked="{Binding ViewModel.LogWindowEnabled, Mode=TwoWay}" />
                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>
                <Separator Margin="-18,0" BorderThickness="0,1,0,0" />
                <controls:SettingRow Title="启用日志滚动" Description="当日志内容超出显示区域时自动滚动播放">
                    <controls:SettingRow.SettingContent>
                        <ui:ToggleSwitch 
                            OnContent="On" OffContent="Off"
                            IsChecked="{Binding ViewModel.LogWindowMarqueeEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:SettingRow.SettingContent>
                </controls:SettingRow>
                <Separator Margin="-18,0" BorderThickness="0,1,0,0" />
                <controls:SettingRow Title="输出调试日志" Description="启用后将输出详细的调试信息，便于排查问题">
                    <controls:SettingRow.SettingContent>
                        <ui:ToggleSwitch 
                            OnContent="On" OffContent="Off"
                            IsChecked="{Binding ViewModel.DebugLogEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </controls:SettingRow.SettingContent>
                </controls:SettingRow>
            </StackPanel>
        </ui:CardExpander>

        <!--  遮罩窗口  -->
        <ui:CardExpander
            Margin="0,0,0,12"
            ContentPadding="0"
            Icon="{ui:SymbolIcon WindowAd20}">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        FontTypography="Body"
                        Text="启用遮罩窗口"
                        TextWrapping="Wrap" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                        Text="在游戏窗口上叠加透明遮罩层，可视化展示图像识别区域和匹配结果"
                        TextWrapping="Wrap" />
                    <ui:ToggleSwitch
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Margin="0,0,24,0"
                        IsChecked="{Binding ViewModel.MaskWindowEnabled, Mode=TwoWay}" />
                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>
            </StackPanel>
        </ui:CardExpander>

    </StackPanel>

</Page>
